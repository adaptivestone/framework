{
  "name": "@adaptivestone/framework",
  "version": "2.7.1",
  "description": "Adaptive stone node js framework",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/adaptivestone/framework"
  },
  "scripts": {
    "dev": "nodemon ./index.js",
    "prod": "nodemon ./cluster.js",
    "test": "jest",
    "codestyle": "prettier --check '**/*.(js|jsx|ts|tsx|json|css|scss|md)'",
    "prepare": "husky install"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testEnvironment": "node",
    "verbose": true
  },
  "author": "Andrey Logunov",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "deepmerge": "^4.2.2",
    "dotenv": "^9.0.2",
    "email-templates": "^8.0.7",
    "express": "^4.17.1",
    "i18next": "^20.2.4",
    "i18next-chained-backend": "^2.1.0",
    "i18next-http-middleware": "^3.1.1",
    "i18next-node-fs-backend": "^2.1.3",
    "minimist": "^1.2.5",
    "mongoose": "^5.12.10",
    "nodemailer": "^6.6.0",
    "nodemailer-sendmail-transport": "^1.0.2",
    "nodemailer-stub-transport": "^1.1.0",
    "prettier": "^2.3.0",
    "pug": "^3.0.2",
    "redis": "^3.1.2",
    "validator": "^13.6.0",
    "winston": "^3.3.3",
    "winston-transport-sentry-node": "^1.0.2"
  },
  "devDependencies": {
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "mongodb-memory-server": "^6.9.6",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
