{
  "name": "@adaptivestone/framework",
  "version": "4.0.0-dev",
  "description": "Adaptive stone node js framework",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/adaptivestone/framework"
  },
  "homepage": "https://framework.adaptivestone.com/",
  "scripts": {
    "dev": "nodemon ./index.js",
    "prod": "nodemon ./cluster.js",
    "test": "jest --coverage=true",
    "prettier": "prettier --check '**/*.(js|jsx|ts|tsx|json|css|scss|md)'",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix",
    "codestyle": "npm run prettier && npm run lint",
    "prepare": "husky install",
    "cli": "node cliCommand"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "text-summary"
    ]
  },
  "author": "Andrey Logunov",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "formidable": "^2.1.1",
    "html-to-text": "^9.0.3",
    "i18next": "^22.0.4",
    "i18next-chained-backend": "^4.0.0",
    "i18next-fs-backend": "^2.0.0",
    "juice": "^8.1.0",
    "minimist": "^1.2.5",
    "mongoose": "^6.0.0",
    "nodemailer": "^6.6.3",
    "nodemailer-sendmail-transport": "^1.0.2",
    "nodemailer-stub-transport": "^1.1.0",
    "pug": "^3.0.2",
    "rate-limiter-flexible": "^2.2.4",
    "redis": "^4.3.1",
    "winston": "^3.3.3",
    "winston-transport-sentry-node": "^2.0.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^27.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "mongodb-memory-server": "^8.0.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
